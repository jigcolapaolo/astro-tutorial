<div class="hamburger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
</div>

<style>
    .hamburger {
      padding-right: 20px;
      cursor: pointer;

      &:hover {
        filter: brightness(1.5);
      }
    }
    
    .hamburger .line {
      display: block;
      width: 40px;
      height: 5px;
      margin-bottom: 10px;
      border: 2px solid #0000;
      background:
        linear-gradient(black, #222) padding-box,
        linear-gradient(rgb(115, 14, 146), rgb(89, 0, 255)) border-box;
    }

    @media screen and (min-width: 636px) {

        .hamburger {
            display: none;
        }
    }
</style>